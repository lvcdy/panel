---
import { BG_URL } from "../lib/config";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Panel", description = "" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scrollbar-hide">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="color-scheme" content="dark" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={BG_URL} fetchpriority="high" />

    <link rel="preconnect" href="https://api.lvcdy.cn" crossorigin />
    <link rel="preconnect" href="https://ipapi.xxlb.org" crossorigin />
    <link rel="preconnect" href="https://t.alcy.cc" crossorigin />
    <link rel="dns-prefetch" href="https://api.lvcdy.cn" />
    <link rel="dns-prefetch" href="https://ipapi.xxlb.org" />
    <link rel="dns-prefetch" href="https://t.alcy.cc" />
  </head>
  <body
    class="relative min-h-screen antialiased bg-[#1a1a1a] overflow-x-hidden selection:bg-white/20"
  >
    <div
      class="fixed inset-0 bg-black/40 backdrop-blur-[1px] pointer-events-none z-[-1]"
    >
    </div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg-url: none;
  }

  body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: var(--bg-url) center/cover no-repeat fixed;
    opacity: 0;
    z-index: -2;
    transition: opacity 1.5s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity;
  }

  body.bg-loaded::before {
    opacity: 1;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  html {
    scrollbar-width: none;
    -ms-overflow-style: none;
    scroll-behavior: smooth;
    -webkit-tap-highlight-color: transparent;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    body::before {
      transition-duration: 1ms;
    }
  }

  .category-toggle-btn {
    border: none;
    padding: 0;
    color: inherit;
    cursor: pointer;
  }

  .category-toggle-btn:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.35);
    outline-offset: 4px;
  }
</style>
